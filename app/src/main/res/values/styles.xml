<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp_8</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/YP_black</item>
    </style>

    <style name="LinearLayoutHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_56</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:theme">@style/Theme.PlaylistMaker</item>
    </style>

    <style name="ImageBackButton">
        <item name="android:layout_width">@dimen/dp_48</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:padding">@dimen/dp_12</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/back</item>
        <item name="android:layout_marginStart">@dimen/dp_4</item>
        <item name="android:theme">@style/Theme.PlaylistMaker</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="TextViewHeaderStyle">
        <item name="android:layout_marginStart">@dimen/dp_12</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="LinearLayoutSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="height">@dimen/dp_61</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewSettingsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:theme">@style/Theme.PlaylistMaker</item>
    </style>

    <style name="ImageSettings">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/dp_12</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
        <item name="android:theme">@style/Theme.PlaylistMaker</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="TextViewTrackName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:theme">@style/Theme.PlaylistMaker</item>
    </style>

    <style name="TextViewTrackInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:theme">@style/Theme.PlaylistMaker</item>
    </style>

    <style name="RefreshButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:paddingStart">@dimen/dp_6</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:backgroundTint">@color/text_black</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">@dimen/dp_54</item>
    </style>

    <style name="ClearHistoryButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dp_6</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:backgroundTint">@color/text_black</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">@dimen/dp_54</item>
    </style>
    <style name="PlayerOtherLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:theme">@style/Theme.PlaylistMaker</item>
    </style>
    <style name="PlayerOtherValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:theme">@style/Theme.PlaylistMaker</item>
    </style>
</resources>