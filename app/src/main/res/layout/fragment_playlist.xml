<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlistScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_light_gray"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/backbutton_toolbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:background="@android:color/transparent"
        app:contentInsetStartWithNavigation="0dp"
        app:elevation="0dp"
        app:navigationIcon="@drawable/back" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/playlistImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_corners"
        android:scaleType="centerCrop"
        android:src="@drawable/track_placeholder_512"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_bold"
        android:paddingTop="24dp"
        android:paddingBottom="4dp"
        android:textColor="@color/YP_black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlistImage"
        tools:text="Bestsongs 2021" />

    <TextView
        android:id="@+id/playlist_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/YP_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_name"
        tools:text="2022" />

    <TextView
        android:id="@+id/playlist_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/YP_black"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_dot_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_description"
        tools:text="300 минут" />

    <TextView
        android:id="@+id/playlist_tracks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:paddingTop="4dp"
        android:textColor="@color/YP_black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/playlist_time"
        app:layout_constraintTop_toBottomOf="@id/playlist_description"
        tools:text="15 треков" />

    <ImageView
        android:id="@+id/shareTracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:src="@drawable/ic_share_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_time" />

    <ImageView
        android:id="@+id/playlist_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:paddingTop="16dp"
        android:src="@drawable/ic_more_24"
        app:layout_constraintStart_toEndOf="@id/shareTracks"
        app:layout_constraintTop_toBottomOf="@id/playlist_time" />
</androidx.constraintlayout.widget.ConstraintLayout>