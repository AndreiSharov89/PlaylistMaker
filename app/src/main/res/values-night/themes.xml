<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/YP_black</item>
        <item name="colorSecondary">@color/YP_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="materialAlertDialogTheme">@style/App.MaterialAlertDialogTheme</item>
    </style>

    <style name="App.MaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/YP_black</item>
        <item name="colorPrimary">@color/YP_blue</item>
        <item name="buttonBarPositiveButtonStyle">@style/App.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/App.DialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/App.DialogButton</item>
    </style>

    <style name="App.DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="color">@color/YP_blue</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>